<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFEF"
    tools:context=".MainActivity">

    <!-- TOP SCORE CARDS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:layout_marginBottom="18dp">

        <!-- Wrong - RED -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/restart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="110dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="22dp"
            app:cardBackgroundColor="#FF8A80">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/restart_alt_24dp_ffffff_fill0_wght400_grad0_opsz24"/>

                <TextView
                    android:text="Restart"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="110dp"
            app:cardElevation="8dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="22dp"
            app:cardBackgroundColor="#FF8A80">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/salah"
                    android:text="0"
                    android:textSize="34sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Wrong"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Right - GREEN -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="110dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="22dp"
            app:cardBackgroundColor="#81C784">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/bener"
                    android:text="0"
                    android:textSize="34sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Right"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Total - BLUE -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="110dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="22dp"
            app:cardBackgroundColor="#64B5F6">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/total"
                    android:text="1"
                    android:textSize="34sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Total"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- QUESTION CARD - PURPLE -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/kartu"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="22dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="26dp"
        app:cardBackgroundColor="#CE93D8">

        <TextView
            android:id="@+id/soal"
            android:text="lalala"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- ANSWERS ROW 1 -->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <!-- Option 1 - BLUE GRADIENT -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kartujawaban1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="#4FC3F7">

            <TextView
                android:id="@+id/jawaban1"
                android:text="lalala"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Option 2 - HOT PINK -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kartujawaban2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FF80AB">

            <TextView
                android:id="@+id/jawaban2"
                android:text="lalala"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- ANSWERS ROW 2 -->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Option 3 - ORANGE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kartujawaban3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFB74D">

            <TextView
                android:id="@+id/jawaban3"
                android:text="lalala"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Option 4 - GREEN MINT -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/kartujawaban4"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:backgroundTint="#A5D6A7">

            <TextView
                android:id="@+id/jawaban4"
                android:text="lalala"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</LinearLayout>
